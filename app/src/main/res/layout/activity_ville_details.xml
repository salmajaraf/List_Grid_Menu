<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VilleDetails">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="383dp"
        android:layout_height="208dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/t1111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mara" />

    <TextView
        android:id="@+id/t1111"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="84dp"
        android:text="Marrakech, surnommée &quot;la ville rouge&quot;, est célèbre pour sa médina animée, ses souks colorés et sa place Jemaa el-Fna. C'est une destination incontournable au Maroc, mêlant tradition et modernité."
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/b800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i1" />

    <Button
        android:id="@+id/b800"
        android:layout_width="152dp"
        android:layout_height="53dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="75dp"
        android:text="Retour"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1111" />
</androidx.constraintlayout.widget.ConstraintLayout>