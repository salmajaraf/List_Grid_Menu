<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VilleDetails">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toTopOf="@+id/t1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mara" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="633dp"
        android:layout_height="0dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="200dp"
        android:text="Marrakech, surnommée &quot;la ville rouge&quot;, est célèbre pour sa médina animée, ses souks colorés et sa place Jemaa el-Fna. C'est une destination incontournable au Maroc, mêlant tradition et modernité."
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/b80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i1" />

    <Button
        android:id="@+id/b80"
        android:layout_width="159dp"
        android:layout_height="90dp"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="186dp"
        android:text="Retour"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t1" />
</androidx.constraintlayout.widget.ConstraintLayout>