            android:textSize="18sp" />

        <TextView
            android:id="@+id/friend3_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            android:text="Ayoub"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friend3_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            android:text="06083745583" />

        <TextView
            android:id="@+id/friend4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            android:text="Hafidi "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friend4_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            android:text="Rim"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/friend4_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            android:text="05456377483" />


    </GridLayout>

    <TextView
        android:id="@+id/amis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="56dp"
        android:text="Liste des Amis "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
